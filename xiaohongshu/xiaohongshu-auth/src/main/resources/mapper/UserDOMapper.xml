<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zx.xiaohongshu.auth.domain.mapper.UserDOMapper">

   <!-- 相当于 map的映射 封装成UserDO类 -->
    <resultMap id="BaseResultMap" type="com.zx.xiaohongshu.auth.domain.dataobject.UserDO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <!-- 查询功能，因为有多条语句 因此要封装到rusultmap中 -->
   <select id="selectByPrimarykey" parameterType="java.lang.Long" resultMap="BaseResultMap">
       select  * from t_user where id=#{id}
   </select>

   <!-- 删除功能  系统自动返回一个整型 无须自己给-->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
          delete from t_user where id=#{id}
    </delete>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.zx.xiaohongshu.auth.domain.dataobject.UserDO">
        insert into t_user (username,create_time,update_time)
        values (#{username},#{createTime},#{updateTime})
    </insert>

     <!-- 更新-->
    <update id="updateByPrimaryKey" parameterType="com.zx.xiaohongshu.auth.domain.dataobject.UserDO">
        update t_user
        set username=#{username},
            update_time=#{updateTime}
            where id=#{id}
    </update>

</mapper>